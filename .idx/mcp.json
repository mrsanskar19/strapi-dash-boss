{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ]
    }
  },
  "chrome-devtools": {
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-chrome-devtools"
    ]
  }
}